</div>

<!--erb works with controller.rb so it wont allow the same thing todo did in html-->
<!--we need to make backbone render elements in loop with this template-->
<!--because it will rerender this page in real time-->
<!--the each do loop below does not rerender on change-->
<!--i inserted raw html template in todos.js script to make this work-->
<script type="text/template" id="item-template">
  <% @todos.each do |todo| %>
    <div class="view">
      <input class="toggle" type="checkbox" <%= todo.done ? 'checked="checked"' : '' %> />
      <label><%= todo.title %></label>
      <a class="destroy"></a>
    </div>
    <input class="edit" type="text" value="<%= todo.title %>" />
  <% end %>
</script>

<h1>Todos SPA on Backbone.js MVC</h1>
<div id="todos">Loading todo SPA</div>

<p id="notice"><%= notice %></p>
<h1>Todos on standard Rails 6 MVC</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.done %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
