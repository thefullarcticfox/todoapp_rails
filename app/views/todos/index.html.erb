<!--Templates for js apps-->
<%= render "todo_app" %>
<%= render "todo_spa" %>

<!--Todoapp by Jérôme Gravel-Niquet-->
<div id="todoapp">
  <header>
    <h1>Todos on backbone.js MVC</h1>
    <input id="new-todo" type="text" placeholder="What needs to be done?">
  </header>
  <section id="main">
    <input id="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul id="todo-list"></ul>
  </section>
  <footer>
    <a id="clear-completed">Clear completed</a>
    <div id="todo-count"></div>
  </footer>
</div>
<div id="instructions">
</div>
<div id="credits">
  Double-click to edit a todo.<br/>
  Created by <a href="http://jgn.me/">J&eacute;r&ocirc;me Gravel-Niquet</a><br/>
  Rewritten by: <a href="https://github.com/tastejs/todomvc">TodoMVC</a><br/>
  Ported to Rails 6 by thefullarcticfox
</div>

<!--Todos SPA-->
<h1>Todos SPA on backbone.js MVC</h1>
<div id="todospa">Loading todo SPA</div>

<!--Todos simple rails 6 scaffold-->
<p id="notice"><%= notice %></p>
<h1>Todos on standard Rails 6 MVC</h1>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Done</th>
    <th colspan="3"></th>
  </tr>
</thead>
  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.done %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Todo', new_todo_path %>
